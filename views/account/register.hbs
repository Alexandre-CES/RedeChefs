<div id="register-background">
    <div class="bg-transparency-50">
        <main id="main-register-box" class="main-centered-box main-form-centered-box bg-transparency-50">
            <header class="main-form-centered-header">
                <div>
                    <i class="bi bi-person-circle"></i>
                </div>
            </header>
            <section>
                <form action="{{routes.register}}" method="post" autocomplete="off">
                    <section>
                        <label for="username"><i class="bi bi-person"></i></label>
                        <input type="text" name="username" id="username" placeholder="username (optional)" minlength="1" maxlength="20" autofocus>
                    </section>

                    <section>
                        <label for="user"><i class="bi bi-person-fill"></i></label>
                        <input type="text" name="user" id="user" placeholder="user" minlength="5" maxlength="20" required>
                    </section>

                    <section>
                        <label for="email"><i class="bi bi-envelope-fill"></i></label>
                        <input type="email" name="email" id="email" placeholder="email (optional)" minlength="11" maxlength="320">
                    </section>

                    <section>
                        <label for="password"><i class="bi bi-key-fill"></i></label>
                        <input type="password" name="password" id="password" placeholder="password" minlength="5" maxlength="30" required>
                    </section>

                    <section>
                        <label for="confirm_password"><i class="bi bi-key"></i></label>
                        <input type="password" name="confirm_password" id="confirm_password" placeholder="confirm-password" minlength="5" maxlength="30" required>
                    </section>
                    <div>
                        <button class="btn btn-small btn-colors" type="submit">Register</button>
                    </div>
                    
                </form>
            </section>
            <hr>
            <footer class="main-form-centered-footer">
                <p>Registered already? <a href="{{routes.login}}">Login</a></p>
            </footer>
        </main>
    </div>
</div>